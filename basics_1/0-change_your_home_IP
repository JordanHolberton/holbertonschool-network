#!/bin/bash

# Backup the /etc/hosts file before making changes
sudo cp /etc/hosts /etc/hosts.bak

# Update localhost to resolve to 127.0.0.2
sudo sed -i '/localhost/c\127.0.0.2\tlocalhost' /etc/hosts

# Add a new line for facebook.com to resolve to 8.8.8.8
# Check if an entry for facebook.com already exists
if grep -q "facebook.com" /etc/hosts; then
    sudo sed -i '/facebook.com/c\8.8.8.8\tfacebook.com' /etc/hosts
else
    echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
fi

echo "Updated /etc/hosts. Please verify the changes:"
cat /etc/hosts
